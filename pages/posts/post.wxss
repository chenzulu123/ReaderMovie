/* pages/posts/post.wxss */

page {
  background: rgb(239, 237, 238);
}

.tab {
  margin-top: 20rpx;
  background: #fff;
}

.swiper-image {
  width: 100%;
}

.swiper-image image {
  width: 100%;
  height: 480rpx;
}

.tab {
  width: 100%;
}

.tab .tab-title {
  width: 100%;
  height: 80rpx;
}

.tab-title image {
  display: block;
  float: left;
  width: 50rpx;
  height: 50rpx;
  padding: 15rpx 20rpx;
}

.tab-content{
  font-size: 14px;
  line-height: 1.6;
  padding: 0rpx 20rpx;
  display: block;
  padding-top: 20rpx;
}
.tab-title .time {
  display: block;
  float: left;
  font-size: 14px;
  line-height: 80rpx;
}

.tb-image {
  width: 100%;
  height: 320rpx;
}

.share {
  padding-top: 15rpx;
  width: 100%;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.share .star {
  width: 30rpx;
  height: 30rpx;
  display: block;
  float: left;
}

.share .star,.share .star-num,.share .message-num {
  margin-left: 10rpx;
}
.share .message {
  width: 30rpx;
  height: 30rpx;
  display: block;
  float: left;
  margin-left: 25rpx;
}

.share .star-num, .share .message-num {
  display: block;
  float: left;
  font-size: 12px;
}
